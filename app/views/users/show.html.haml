- provide(:title, @user.name)
-#%p#notice= notice
.col-xs-12.col-md-12
  %aside.profile_user
    %h3
      = t("common.profile")
    = gravatar_for @user
    .field
      .label= t("common.user")
      .info.long-word= @user.name
    .field
      .label= t("common.email")
      .info.long-word= @user.email
    .field
      .label.total_user_values= t("common.total_values")
      .info.long-word= @total_user_values
    %br

.col-xs-12.col-md-12
  .user_value_list
    = render 'users/user_values_list', locale: @current_locale
    %br

    = link_to t('.work'), work_path, class: "btn btn-white"
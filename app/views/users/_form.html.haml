
= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label t('.name'), class: "label"
    = f.text_field :name, class: "form-control"
  .field
    = f.label t('common.email'), class: "label"
    = f.text_field :email, class: "form-control"
  .field
    = f.label t('common.password'), class: "label"
    = f.password_field :password, class: "form-control"
  .field
    = f.label t('.password_confirmation'), class: "label"
    = f.password_field :password_confirmation, class: "form-control"


  .actions.field
    = f.submit t(".create_account"), class: "btn btn-large btn-white"
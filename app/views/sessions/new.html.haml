- content_for(:title, "Sign in")
.col-xs-6.col-xs-offset-3.col-md-6.col-md-offset-3

  %h1= t('common.sign_in')

  = form_for(:session, url: sessions_path) do |f|
    .field
      = f.label  t('common.email'), class: "label"
      = f.text_field :email, class: "form-control"
    .field
      = f.label t('common.password'), class: "label"
      = f.password_field :password, class: "form-control"
    .field
      = f.submit t('common.sign_in'), class: "btn btn-large btn-white"
  %p.sign_up_link
    %span.add-text= t('.new_user')+'?'
    #{link_to t('common.sign_up'), signup_path}
